{
  "manifest_version": 3,
  "name": "Review Plz",
  "version": "0.1",
  "description": "Makes it easier to ask for a code review",
  "icons": {
    "48": "icons/48.png",
    "512": "icons/512.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "48": "icons/48.png"
    }
  },
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "scripting"
  ],
  "host_permissions": [
    "https://phabricator.twitter.biz/*"
  ]
}
